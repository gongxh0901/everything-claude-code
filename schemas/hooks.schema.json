{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Code 钩子配置",
  "description": "Claude Code 钩子的配置文件。事件类型在运行时验证，必须是以下之一：PreToolUse、PostToolUse、PreCompact、SessionStart、SessionEnd、Stop、Notification、SubagentStop",
  "$defs": {
    "hookItem": {
      "type": "object",
      "required": [
        "type",
        "command"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "command": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        }
      }
    },
    "matcherEntry": {
      "type": "object",
      "required": [
        "matcher",
        "hooks"
      ],
      "properties": {
        "matcher": {
          "type": "string"
        },
        "hooks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/hookItem"
          }
        },
        "description": {
          "type": "string"
        }
      }
    }
  },
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "hooks": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/matcherEntry"
            }
          }
        }
      },
      "required": [
        "hooks"
      ]
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/$defs/matcherEntry"
      }
    }
  ]
}
